# ~/.zshrc

# DO NOT EDIT THIS FILE DIRECTLY
#
# This file is managed by chezmoi
# If you need to override or set local, use one of the following:
# ~/.path can be used to extend `$PATH`.
# ~/.export can be used to export local environment variables.
# ~/.extra can be used for other settings you donâ€™t want to commit.
#

# Add ~/.local/bin in PATH (chezmoi install dir)
export PATH=$PATH:~/.local/bin

# Prefer US English and use UTF-8.
export LANG='en_US.UTF-8';
export LC_ALL='en_US.UTF-8';


## Settings for ZSH

# Remove unsecure brew-installed files from path
fpath=(${fpath#"/usr/local/share/zsh/site-functions"})
autoload -U compinit; compinit
zstyle ':completion:*' matcher-list '' 'm:{a-zA-Z}={A-Za-z}'

# Set ZSH theme
fpath+=$HOME/.local/share/zsh/pure
autoload -U promptinit; promptinit
prompt pure
zstyle :prompt:pure:path color 'green'

# Set key bindings to Emacs mode.
bindkey -e

# Set command history, don't save duplicates.
export HISTSIZE=8192
export SAVEHIST=${HISTSIZE}
setopt HIST_IGNORE_ALL_DUPS

# Highlight section titles in manual pages.
export LESS_TERMCAP_md="${yellow}";


## Aliases

# Load aliases from ~/.local/share/zsh/aliases
dot_aliases="${HOME}/.local/share/zsh/aliases"
[ -r "$dot_aliases" ] && [ -f "$dot_aliases" ] && source "$dot_aliases"
unset dot_aliases


## Shell functions 

# Load from ~/.local/share/zsh/functions
dot_functions="${HOME}/.local/share/zsh/functions"
[ -r "$dot_functions" ] && [ -f "$dot_functions" ] && source "$dot_functions"
unset dot_functions


## Optional, local dotfiles

for file in ~/.{path,exports,extra}; do
    [ -r "$file" ] && [ -f "$file" ] && source "$file"
done
unset file
